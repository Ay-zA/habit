{
  "presets": ["env", "flow", "stage-0", "react"],
  "retainLines": true,
  "plugins": [
    "react-hot-loader/babel",
    "transform-regenerator",
    "transform-runtime",
    "transform-decorators-legacy",
    "babel-plugin-add-module-exports",
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "~": "./",
          "@": "./app/server",
          "-": "./app/client"
        }
      }
    ],
    [
      "transform-react-remove-prop-types",
      {
        "ignoreFilenames": ["node_modules"]
      }
    ]
  ]
}
