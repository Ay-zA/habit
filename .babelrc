{
  "presets": ["env", "react", "flow", "stage-0"],
  "retainLines": true,
  "plugins": [
    "react-hot-loader/babel",
    "add-module-exports",
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@": "app/server",
          "~": "./",
          "$redux": "app/client/redux"
        }
      }
    ]
  ]
}
